<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootCardView"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgManzara"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/thumb_1_0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/tvManzaraBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="Manzara"
                android:textSize="18sp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/tvManzaraTanim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Manzara TanÄ±m"
                android:textSize="14sp"
                android:textStyle="italic"


                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSil"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="7dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/colorAccent" />

            <ImageView
                android:id="@+id/imgKopyala"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="7dp"
                android:src="@drawable/ic_make_copy"
                android:tint="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>